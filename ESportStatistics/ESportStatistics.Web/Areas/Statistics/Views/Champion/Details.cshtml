
@model ChampionDetailsViewModel
@{
    ViewData["Title"] = "Index";
}
<h1>@Model.Name</h1>

<div class="row">
    <div class="col-lg-3">
        <img src="@Model.BigImageURL" alt="" class="center">
    </div>
    <div class="col-lg-7">
        <div class="table-responsive">
            <table class="table tablesorter " id="">
                <thead>
                </thead>
                <tbody>
                    <tr>
                        <td>Armor</td>
                        <td>@Model.Armor</td>
                    </tr>
                    <tr>
                        <td>ArmorPerLevel</td>
                        <td>@Model.ArmorPerLevel</td>
                    </tr>
                    <tr>
                        <td>AttackDamage</td>
                        <td>@Model.AttackDamage</td>
                    </tr>
                    <tr>
                        <td>AttackDamagePerLevel</td>
                        <td>@Model.AttackDamagePerLevel</td>
                    </tr>
                    <tr>
                        <td>AttackRange</td>
                        <td>@Model.AttackRange</td>
                    </tr>
                    <tr>
                        <td>Crit</td>
                        <td>@Model.Crit</td>
                    </tr>
                    <tr>
                        <td>CritPerLevel</td>
                        <td>@Model.CritPerLevel</td>
                    </tr>
                    <tr>
                        <td>HP</td>
                        <td>@Model.HP</td>
                    </tr>
                    <tr>
                        <td>HPPerLevel</td>
                        <td>@Model.HPPerLevel</td>
                    </tr>
                    <tr>
                        <td>HPRegen</td>
                        <td>@Model.HPRegen</td>
                    </tr>
                    <tr>
                        <td>HPRegenPerLevel</td>
                        <td>@Model.HPRegenPerLevel</td>
                    </tr>
                    <tr>
                        <td>Movespeed</td>
                        <td>@Model.Movespeed</td>
                    </tr>
                    <tr>
                        <td>SpellBlock</td>
                        <td>@Model.SpellBlock</td>
                    </tr>
                    <tr>
                        <td>SpellBlockPerLevel</td>
                        <td>@Model.SpellBlockPerLevel</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

