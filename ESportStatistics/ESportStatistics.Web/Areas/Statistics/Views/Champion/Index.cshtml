@model ChampionIndexViewModel

<h2>Champions</h2>

<div class="card card-plain">
    <div class="card-body">
        <div class="table-responsive">
            @await Html.PartialAsync("_ChampionTablePartial", Model.Table)
        </div>
    </div>
</div>

@section Search {
    <li class="search-bar input-group">
        <button class="btn btn-link" id="search-button" data-toggle="modal" data-target="#searchModal">
            <i class="tim-icons icon-zoom-split"></i>
            <span class="d-lg-none d-md-block">Search</span>
        </button>
    </li>

    <div class="modal modal-search fade" id="searchModal" tabindex="-1" role="dialog" aria-labelledby="searchModal" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <form asp-area="Statistics" asp-controller="Champion" asp-action="Filter" asp-route-pageNumber="1" method="get"
                          data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#tablePartial">
                        <input type="text" class="form-control" name="searchTerm" placeholder="SEARCH" autocomplete="off">
                    </form>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i class="tim-icons icon-simple-remove"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
}

