@model UserTableViewModel

<td>@Model.Username</td>
<td>@Model.Email</td>
<td>@Model.PhoneNumber</td>
<td>@(!Model.IsDeleted)</td>
<td>
    <div class=" dark-theme">
        @if (Model.IsDeleted)
        {
            <a class="page-link @(Model.IsDeleted == false ? "current disabled" : string.Empty)"
               asp-area="Administration" asp-controller="User" asp-action="Restore" asp-route-id="@Model.Id" method="get"
               data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#@Model.Id">Restore</a>
        }
        else
        {
            <a class="page-link"
               asp-area="Administration" asp-controller="User" asp-action="Disable" asp-route-id="@Model.Id"
               data-ajax="true" data-ajax-method="get" data-ajax-mode="replace" data-ajax-update="#@Model.Id">Disable</a>
        }

        <a class="page-link" asp-area="Administration" asp-controller="User" asp-action="Details" asp-route-id="@Model.Id">Details</a>
    </div>
</td>